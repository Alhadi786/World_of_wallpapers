<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />
    <TextView
        android:text="Caches"
        android:padding="5dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Clear Cache"
        android:id="@+id/txt_clear"
        android:padding="10dp"
        android:textSize="18dp"
        android:background="@android:color/black"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Cache Size:"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" />
        <TextView
            android:id="@+id/txt_cache"
            android:text="2.7MB"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp" />

    </LinearLayout>

    <TextView
        android:text="Notifications"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <TextView
            android:text="Notifications"
            android:paddingStart="10dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" />
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent" />
        <me.rishabhkhanna.customtogglebutton.CustomToggleButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/togle_btn_not"
            android:layout_marginEnd="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textOn="ON"
            android:textOff="Off"
            android:layout_marginRight="20dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/darker_gray"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_not_daily"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <TextView
            android:text="Daily Notification"
            android:paddingStart="10dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" />
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent" />
        <me.rishabhkhanna.customtogglebutton.CustomToggleButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="ON"
            android:id="@+id/togle_btn_daily"
            android:layout_marginEnd="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textOn="ON"
            android:textOff="Off"
            android:layout_marginRight="20dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/slecter"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayout_not_weekly"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <TextView
            android:text="Notifications Weekly"
            android:paddingStart="10dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_weight="2.7"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" />
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent" />
        <me.rishabhkhanna.customtogglebutton.CustomToggleButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="ON"
            android:id="@+id/togle_btn_weekly"
            android:layout_marginEnd="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textOn="ON"
            android:textOff="Off"
            android:layout_marginRight="20dp" />

    </LinearLayout>

    <TextView
        android:text="Sounds"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <TextView
            android:text="Notification Sound"
            android:paddingStart="10dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_weight="2.8"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" />
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="match_parent" />
        <me.rishabhkhanna.customtogglebutton.CustomToggleButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="ON"
            android:id="@+id/togle_btn_sound"
            android:layout_marginEnd="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textOn="ON"
            android:textOff="Off"
            android:layout_marginRight="20dp" />
    </LinearLayout>

    <TextView
        android:text="Vibrations"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <TextView
            android:text="Notification Vibrations"
            android:paddingStart="10dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" />
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent" />
        <me.rishabhkhanna.customtogglebutton.CustomToggleButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="ON"
            android:id="@+id/togle_btn_vibration"
            android:layout_marginEnd="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textOn="ON"
            android:textOff="Off"
            android:layout_marginRight="20dp" />
    </LinearLayout>


</LinearLayout>